<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reminder_item_root"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/background_state_drawable"
    android:clickable="true"

    >

    <ImageView
        android:id="@+id/reminder_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_dashboard_black_48dp" />

    <TextView
        android:id="@+id/reminder_subject_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reminder_icon"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:text="Subject"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:maxLines="1" />

    <TextView
        android:id="@+id/reminder_details_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminder_subject_list_item"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:maxLines="1"
        android:text="Details"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reminder_date_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminder_details_list_item"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:text="Date"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/reminder_time_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminder_details_list_item"
        android:layout_toRightOf="@id/reminder_date_list_item"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="48dp"
        android:text="Time"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:id="@+id/reminder_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="16dp"
        android:src="@drawable/ic_delete_black_48dp"
        android:background="@drawable/background_state_drawable"
        />

</RelativeLayout>