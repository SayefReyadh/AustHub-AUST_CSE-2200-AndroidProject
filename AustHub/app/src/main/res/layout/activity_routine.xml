<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_routine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.example.sayefreyadh.austhub.ui.routine.RoutineActivity">

    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/activity_routine_clock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/activity_routine_clock_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:textSize="26sp"
            android:textColor="#ffff"
            android:paddingRight="10dp"
            />

        <TextView
            android:layout_toRightOf="@id/activity_routine_clock_day"
            android:id="@+id/activity_routine_clock_date"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="26sp"
            android:textColor="#ffff"
            />

        <TextView
            android:layout_toRightOf="@id/activity_routine_clock_date"
            android:id="@+id/activity_routine_clock_month"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="August"
            android:textSize="26sp"
            android:textColor="#ffff"
            />

        <TextView
            android:layout_toRightOf="@id/activity_routine_clock_month"
            android:id="@+id/activity_routine_clock_year"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017"
            android:textSize="26sp"
            android:textColor="#ffff"
            />

    </RelativeLayout>
    <TextView
        android:layout_below="@id/activity_routine_clock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_year_semester_section"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:layout_below="@id/user_year_semester_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/routine_list_item_days"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="false">
    </ListView>

</RelativeLayout>
