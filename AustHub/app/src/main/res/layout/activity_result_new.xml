<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_result_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sayefreyadh.austhub.ui.results.ResultActivity">


    <android.support.design.widget.TabLayout
        android:id="@+id/activity_result_new_tablayout"
        android:background="@color/clockBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        >

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_result_new_viewpager"
        android:layout_below="@+id/activity_result_new_tablayout"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v4.view.ViewPager>
</RelativeLayout>
